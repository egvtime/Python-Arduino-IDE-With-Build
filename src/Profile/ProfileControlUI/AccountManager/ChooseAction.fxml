<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="180.0" prefWidth="300.0" style="-fx-background-color: #1E1F22;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Profile.ProfileControlUI.AccountManager.ChooseActionController">

    <children>
        <Label layoutX="58.0" layoutY="21.0" text="Please choose an action:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <Button fx:id="btnCreate" layoutX="40.0" layoutY="60.0" onAction="#onCreate" prefHeight="30.0" prefWidth="220.0" style="-fx-background-color: #05803a; -fx-text-fill: WHITE;" text="Create New Profile" />

        <Button fx:id="btnLogin" layoutX="40.0" layoutY="100.0" onAction="#onLogin" prefHeight="30.0" prefWidth="220.0" style="-fx-background-color: #05803a; -fx-text-fill: WHITE;" text="Log In" />

        <Button fx:id="btnCancel" layoutX="40.0" layoutY="140.0" onAction="#onCancel" prefHeight="25.0" prefWidth="220.0" style="-fx-background-color: #1f272a; -fx-text-fill: WHITE;" text="Cancel" />
    </children>
</AnchorPane>
